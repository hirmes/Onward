{
  "name": "Onward!",
  "description": "Do a few daily tasks before surfing.",
  "version": "1.0",
  "permissions": ["webRequest", "webRequestBlocking", "<all_urls>", "storage"],
  "background": {
    "scripts": ["extension_logic.js"],
    "persistent": true
  },
  "chrome_url_overrides": {
    "newtab": "homepage.html"
  },
  "web_accessible_resources": [
    "homepage.html",
    "styles.css",
    "background.jpg"
  ],
  "manifest_version": 2,
  "icons": { "16": "onwards_icon_16.png",
             "48": "onwards_icon_48.png",
            "128": "onwards_icon.png" }
}